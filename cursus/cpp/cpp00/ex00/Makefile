# **************************************************************************** #

# **************************************************************************** #
# Program

NAME := megaphone

# **************************************************************************** #
# Compiler

CXX := c++

# **************************************************************************** #
# Standard

CXXSTD := -std=c++98

# **************************************************************************** #
# Flags

CXXFLAGS := -Wall -Wextra -Werror -g

# **************************************************************************** #
# Sources

SRC := megaphone.cpp

# **************************************************************************** #
# Objects

OBJ := $(SRC:%.cpp=%.o)

# **************************************************************************** #
# Rules

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(CXXSTD) $(CXXFLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp
	$(CXX) $(CXXSTD) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean

	rm -f $(NAME)

.PHONY: all clean fclean re